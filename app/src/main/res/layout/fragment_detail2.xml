<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- fragment_detail_location.xml -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#1D267D"
        tools:context=".fragment.DetailFragment2">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#D4ADFC"
            android:fontFamily="@font/cairo_black"
            android:text="Nama Tempat :"

            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNamaTempat2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:background="@drawable/custom_edt2"
            android:textSize="16sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_margin="10dp"
            android:textColor="@color/white"

            android:textSize="18sp"
            android:fontFamily="@font/cairo_black"

            android:text="Alamat :"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAlamatlokasi2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="@color/black"

            android:textSize="16sp"
            android:background="@drawable/custom_edt2"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_margin="10dp"
            android:textColor="@color/white"

            android:textSize="18sp"
            android:text="Deskripsi :"
            android:fontFamily="@font/cairo_black"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDeskripsiTempat2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="16sp"
            android:textColor="@color/black"


            android:background="@drawable/custom_edt2"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_margin="10dp"
            android:textColor="@color/white"

            android:textSize="18sp"
            android:text="Link Google Maps:"

            android:fontFamily="@font/cairo_black"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLinkTempat2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="16sp"
            android:linksClickable="true"
            android:autoLink="web|email"
            android:textColorLink="@color/black"

            android:background="@drawable/custom_edt2"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/img_detail2"
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_edt"
            android:src="@drawable/ic_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <Button
                android:id="@+id/bEdit2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/cairo_black"
                android:textColor="@color/black"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#D4ADFC"
                android:layout_marginBottom="10dp"
                android:text="Edit" />

            <Button
                android:id="@+id/bHapus2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/cairo_black"
                android:textColor="@color/black"
                android:backgroundTint="#D4ADFC"

                android:text="Hapus" />

        </LinearLayout>

        <Button
            android:id="@+id/bPetunjukarah2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_black"
            android:textColor="@color/black"
            android:backgroundTint="#D4ADFC"

            android:text="Petunjuk Arah" />

        <!-- Tambahkan view lainnya sesuai dengan data yang ingin ditampilkan -->

    </LinearLayout>
</ScrollView>